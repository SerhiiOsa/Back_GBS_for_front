<form id="editing-form">
  <label for="specializationName">Specialization name</label>
  <input type="text" id="specializationName" name="specializationName" required>

  <label for="description">Short description</label>
  <textarea id="description" name="description" rows="4" required></textarea>

  <label for="extendedDescription">Extended description</label>
  <textarea id="extendedDescription" name="extendedDescription" rows="12"></textarea>

  <input type="text" id="parentId" name="parentId" hidden>

  <button id="editing-submit-btn" type="submit"></button>
</form>
<div id="message-window"></div>